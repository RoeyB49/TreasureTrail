<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="RoundedTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <item name="boxCornerRadiusTopStart">16dp</item>
                <item name="boxCornerRadiusTopEnd">16dp</item>
                <item name="boxCornerRadiusBottomStart">16dp</item>
                <item name="boxCornerRadiusBottomEnd">16dp</item>
                <item name="android:layout_width">0dp</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:paddingHorizontal">20dp</item>

        </style>

        <!-- Style for rounded button -->
        <style name="RoundedButton">
                <item name="android:layout_width">200dp</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:backgroundTint">@color/buttonColor</item>
                <item name="android:textColor">@color/white</item>
                <item name="android:textSize">16sp</item>
                <item name="android:layout_marginTop">20dp</item>

        </style>

</resources>